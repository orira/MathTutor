<resources>

    <style name="margins_width_default" parent="match_parent_width">
        <item name="android:layout_marginLeft">@dimen/margin_activity_login</item>
        <item name="android:layout_marginRight">@dimen/margin_activity_login</item>
    </style>

    <style name="input_login" parent="match_parent_width">
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/base_grey_secondary</item>
        <item name="android:textColorHint">@color/base_grey</item>
        <item name="android:drawableRight">@android:drawable/ic_delete</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="button_base_color" parent="match_parent_width">
        <item name="android:textColor">@color/base_grey_dark</item>
        <item name="android:background">@drawable/selector_button_cerise</item>
        <item name="android:shadowColor">@color/base_grey_dark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">18</item>
    </style>

    <style name="button_login" parent="button_base_color">
        <item name="android:layout_marginLeft">@dimen/margin_activity_login</item>
        <item name="android:layout_marginRight">@dimen/margin_activity_login</item>
    </style>

</resources>
