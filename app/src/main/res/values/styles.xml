<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.Actionbar</item>
    </style>

    <style name="Theme.Actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/base_green</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- No Action Bar -->
    <style name="Theme.Preview" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@drawable/background_gradient_radial_green</item>
    </style>

    <!-- Boilerplate Styles -->
    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_parent_width" parent="match_parent">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parent_height" parent="match_parent">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Label Styles -->
    <style name="label_xLarge" parent="wrap_content">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="label_large" parent="wrap_content">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="preview_label" parent="label_large">
        <!-- find a real value -->
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>


</resources>
