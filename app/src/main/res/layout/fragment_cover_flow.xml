<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_cover_flow_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_cover_flow_iv_book"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/img_book_green"
        android:layout_centerInParent="true"
        android:contentDescription="@string/img_cover_flow_book"/>

    <TextView
        android:id="@+id/fragment_cover_flow_tv_title_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_xlarge"
        android:layout_marginLeft="@dimen/margin_default_x1.75"
        android:gravity="center"
        android:layout_centerVertical="true" />

</RelativeLayout>